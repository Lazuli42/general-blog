{{#if isImageShowing}}
<form >
<div class="form-group">
  <label>Title</label>
  {{input value=title id="title" class="form-control" required='required'}}

  <label>Author</label>
  {{input value=author id="author" class="form-control" required=true}}

  <label>Content</label>
  {{textarea value=content id="content" class="form-control" required=true}}

  <label>Image Url</label>
  {{input value=image id="image" class="form-control" required=true}}

  <label>Date</label>
  {{input value=time id="time" class="form-control" required=true}}
</div>

  <button class="btn btn-success" {{action 'savePost1'}}>Submit</button>

</form>
{{else}}
  <button class="btn-glyph btn btn-default pull-left" {{action 'imageShow' }} id="new-post"><span class="glyphicon glyphicon-plus-sign"></span></button>
{{/if}}
